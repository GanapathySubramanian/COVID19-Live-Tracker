<script>
    function refreshData(){
            clearData();
                var url="https://api.covid19api.com/summary"
                var data = '';
                $.get(url,(data)=>{

                    console.log(data.Global);

                    $("#data-totalconfirmed").html(`${data.Global.TotalConfirmed}`);
                    $("#data-newconfirmed").html(`${data.Global.NewConfirmed}`);
                    $("#data-totaldeath").html(`${data.Global.TotalDeaths}`);
                    $("#data-newdeath").html(`${data.Global.NewDeaths}`);
                    $("#data-totalrecovered").html(`${data.Global.TotalRecovered}`);
                    $("#data-newrecovered").html(`${data.Global.NewRecovered}`);
                    $(".data-updatedat").html(`Last Updated : ${data.Global.Date.slice(0,10)}`);
                })
        }
        function clearData(){
            $('#data').empty()
        }
        
         drawchart();
        function drawchart(){
            var url="https://api.covid19api.com/summary"
            var data = '';
            $.get(url,(data)=>{
                const ctx = document.getElementById('myChart').getContext('2d');
                const myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Total_Confirmed', 'Total_Death', 'Total_Recovered', 'New_Confirmed', 'New_Death', 'New_Recovered'],
                    datasets: [{
                        label: 'Covid 19 Global cases',
                        data: [`${data.Global.TotalConfirmed}`, `${data.Global.TotalDeaths}`,`${data.Global.TotalRecovered}`, `${data.Global.NewConfirmed}`,`${data.Global.NewDeaths}`,`${data.Global.NewRecovered}`],
                        backgroundColor: [
                            'red',
                            'blue',
                            'green',
                            'rgba(206, 18, 18, 1)',
                            'rgba(13, 110, 253, 1)',
                            'rgba(25, 135, 84, 1)'
                        ],
                        borderColor: [
                            'rgba(255, 0, 0, 1)',
                            'rgba(64, 112, 244, 1)',
                            'rgba(34, 139, 34, 1)',
                            'rgba(206, 18, 18, 1)',
                            'rgba(13, 110, 253, 1)',
                            'rgba(25, 135, 84, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            });
        }
    
 
